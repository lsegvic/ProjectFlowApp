@model PracenjeTijekaProjekta.Models.PracenjeProjekta.Categories

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/editUsersProject.css" rel="stylesheet" />
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" ,@style="margin-top:2%;margin-left:-4%"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" style="padding:2% 2% 2% 2%"/>
            </div>
        </div>
    </div>
}

<div style="margin-left:-2%">
    @Html.ActionLink("Back to List", "Index")
</div>
