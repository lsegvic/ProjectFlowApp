@model PracenjeTijekaProjekta.Models.PracenjeProjekta.UsersProject

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/createProject.css" rel="stylesheet" />

<h2>Create new project</h2>
@ViewBag.nameSurname
@ViewBag.test

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control", @required = true } })
                @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger", @style = "margin-top:5px; margin-left:-45px" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" style="padding:2% 2% 2% 2%" />
            </div>
        </div>
    </div>
}

<div style="margin-left:-4%">

    @Html.ActionLink("Back to List", "Index")
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}