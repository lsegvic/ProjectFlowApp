@model PracenjeTijekaProjekta.Models.PracenjeProjekta.Project

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/createProject.css" rel="stylesheet" />
<h2>Add new data for my project</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group" style="margin-top:30px">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2", @style = "margin-left:-6%" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker", @style = "margin-left:12%" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger", @style = "margin-top:5px; margin-left:4%" })
        </div>
    </div>

    <div class="form-group" style="margin-top:24px">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:5%" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "margin-top:5px; margin-left:-3%"})
        </div>
    </div>

    <div class="form-group" style="margin-top:24px">
        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2", @style = "margin-left:-1%" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Category, Model.CategoryList, "Select category", new { @class = "btn btn-default dropdown-toggle", @style = "width: 100%; margin-left:6%" })
            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger", @style = "margin-top:5px; margin-left:-2%"})
        </div>
    </div>

    <div class="form-group" style="margin-top:24px">
        @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:5%" } })
            @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger", @style = "margin-top:5px; margin-left:-3%"})
        </div>
    </div>

    <div class="form-group" style="margin-top:24px">
        @Html.LabelFor(model => model.NumP, htmlAttributes: new { @class = "control-label col-md-2", @style = "margin-left:-3%" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NumP, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:9%" } })
            @Html.ValidationMessageFor(model => model.NumP, "", new { @class = "text-danger" ,@style= "margin-top:5px; margin-left:1%"})
        </div>
    </div>

    <div class="form-group" style="margin-top:24px;margin-left:20%">
        <div class="col-md-offset-2 col-md-10" >
            <input type="submit" value="Submit" class="btn btn-default" style="padding:3%" />
        </div>
    </div>
</div>
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts{

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

