@model PracenjeTijekaProjekta.Models.PracenjeProjekta.UsersProject

<h2 style="text-align:center">Assign Project Manager</h2>
<h3>
    Project name - @ViewBag.projectName
</h3>
<link href="~/Content/assignPM.css" rel="stylesheet" />
@using (Html.BeginForm("AssignProjectManager", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>
            @Html.Hidden("ProjectName", new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label" style="margin-right:20px">Select Project Manager</label>
                @Html.DropDownList("ProjectMng", (IEnumerable<SelectListItem>)ViewBag.projectMng, "Select...", new { @class = "btn btn-default dropdown-toggle", @style = "width: 100%" })
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Assign Project Manager" class="btn btn-default" style="margin-left:-115px; margin-top:20%;padding:2% 2% 2% 2%" />
                </div>
            </div>
        </div>

        <div class="form-group">
            
        </div>
    </div>
}
    <div style="margin-left:-38px; margin-top:22px">
        @Html.ActionLink("Back to all projects", "Index", "UsersProjects")
    </div>
@section scripts{

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

